<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margen_pantalla"
    tools:context=".fragments.ingreso_cajas_local.CajasInFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:text="INGRESO DE CAJAS AL LOCAL"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:background="@drawable/borde_azul_buscador"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ingreso_cajas_edtCodigo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:inputType="numberPassword"
            android:maxLength="8"
            android:hint="Pasar lector de codigo de barras"
            android:gravity="center"
            android:background="@drawable/borde_edit_text"
            />
        <ImageView
            android:id="@+id/ingreso_cajas_btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:tint="@android:color/white"
            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="@dimen/margin8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin16dp"
                android:visibility="gone"
                android:background="@drawable/fondo_verde">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DNI CORRECTO"
                    android:textColor="@color/colorIcons"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/texto_grande"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/dni_correcto_txtDni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="43372489"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/dni_correcto_txtNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/texto_mediano"
                        android:textStyle="bold"
                        android:text="DENIS RICARDO MORALES RETAMOZO"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/dni_correcto_txtSede"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="SEDE"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/dni_correcto_txtLocal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/texto_mediano"
                        android:textStyle="bold"
                        android:text="EMBLEMATICA INSTITUCION EDUCATIVA"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/dni_correcto_txtAula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="AULA"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin16dp"
                android:visibility="gone"
                android:background="@drawable/fondo_naranja">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ERROR. SU LOCAL DE EVALUACIÓN ES"
                    android:textColor="@color/colorIcons"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/texto_grande"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/error_local_txtSede"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="SEDE"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/error_local_txtLocal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/texto_mediano"
                        android:textStyle="bold"
                        android:text="EMBLEMATICA INSTITUCION EDUCATIVA"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/error_local_txtAula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="AULA"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/error_local_txtDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="DIRECCION"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin16dp"
                android:visibility="gone"
                android:background="@drawable/fondo_marron">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ERROR. DNI YA REGISTRADO"
                    android:textColor="@color/colorIcons"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/texto_grande"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/error_yaregistrado_txtDni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="DNI"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/error_yaregistrado_txtNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/texto_mediano"
                        android:textStyle="bold"
                        android:text="NOMBRE"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/error_yaregistrado_txtAula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="AULA"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/error_yaregistrado_txtFechaHora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="FECHA Y HORA DE REGISTRO"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin16dp"
                android:visibility="gone"
                android:background="@drawable/fondo_rojo">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOCENTE YA REGISTRADO EN EL PADRÓN"
                    android:textColor="@color/colorIcons"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/texto_grande"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>